<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EFEFEF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@color/white">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/community6_LeftArrow_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white"
                style="?borderlessButtonStyle"
                android:src="@drawable/arrowleft"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                >


            </ImageButton>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="@drawable/edit_radius_gray"
                android:layout_gravity="center"
                android:layout_marginStart="17dp">

                <ImageButton
                    android:id="@+id/community6_Search_btn"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:src="@drawable/search"
                    android:scaleType="fitXY"
                    android:background="#EFEFEF"
                    style="?borderlessButtonStyle"
                    android:layout_marginStart="13dp">

                </ImageButton>

                <EditText
                    android:id="@+id/community6_Search_edit"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:background="#EFEFEF"
                    android:layout_marginStart="10dp"
                    android:hint="腹肌"
                    android:maxLines="1">

                </EditText>

                <ImageButton
                    android:id="@+id/community6_Cancel_btn"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cancel"
                    android:scaleType="fitXY"
                    android:background="#EFEFEF"
                    style="?borderlessButtonStyle"
                    android:layout_marginStart="5dp">

                </ImageButton>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/square_border_gray"
                android:layout_marginStart="20dp"
                style="?borderlessButtonStyle">

            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community6_username1"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_marginStart="12dp"
                android:textSize="18dp"
                android:textStyle="bold">

            </TextView>

            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/button_radius_green"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:text="关注"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17dp">

            </Button>



        </LinearLayout>



    </LinearLayout>


</LinearLayout>