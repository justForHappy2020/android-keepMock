<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFEFEF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/searching_button"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/search2"
                        android:scaleType="fitXY">

                    </ImageButton>

                    <EditText
                        android:id="@+id/text_inout_search"
                        android:layout_width="274dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#EFEFEF"
                        android:hint="大家都在搜 [宠粉嘉年华] "
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="#686868"
                        android:textSize="17dp">

                    </EditText>

                </LinearLayout>

                <Button
                    android:id="@+id/quit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textColor="#25C689"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:background="#EFEFEF"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="Arial-regular"
                    style="?android:attr/borderlessButtonStyle">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="31dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/show_searching_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索记录"
                    android:layout_marginLeft="27dp"
                    android:textColor="#414141"
                    android:textSize="17dp">

                </TextView>

                <Button
                    android:id="@+id/clean_history"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="210dp"
                    android:background="#EFEFEF"
                    android:drawableLeft="@drawable/trashbin"
                    android:text="清除记录"
                    android:textColor="#B2B2B2"
                    style="?android:attr/borderlessButtonStyle">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.library.AutoFlowLayout
                    android:id="@+id/flowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="15dp"></com.example.library.AutoFlowLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/show_famous_searching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门搜索"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="40dp"
                android:textColor="#414141"
                android:textSize="17dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/famous_searching1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_radius_white"
                    android:drawableLeft="@drawable/fire"
                    android:gravity="center"
                    android:text="@string/edittext_tip"
                    android:textColor="#736F75"
                    android:textSize="15dp">

                </Button>

                <Button
                    android:id="@+id/famous_searching2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_radius_white"
                    android:drawableLeft="@drawable/fire"
                    android:gravity="center"
                    android:text="@string/edittext_tip"
                    android:textColor="#736F75"
                    android:textSize="15dp">

                </Button>

                <Button
                    android:id="@+id/famous_searching3"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_radius_white"
                    android:drawableLeft="@drawable/fire"
                    android:gravity="center"
                    android:text="@string/edittext_tip"
                    android:textColor="#736F75"
                    android:textSize="15dp">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/famous_searching4"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/button_radius_white"
                    android:text="瘦腿"
                    android:textColor="#615D64"
                    android:textSize="16sp">

                </Button>

                <Button
                    android:id="@+id/famous_searching5"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_radius_white"
                    android:text="增肌"
                    android:textColor="#615D64"
                    android:textSize="16dp">

                </Button>

                <Button
                    android:id="@+id/famous_searching6"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_radius_white"
                    android:text="保持健康"
                    android:textColor="#615D64"
                    android:textSize="16dp">

                </Button>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>