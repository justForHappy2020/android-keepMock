<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_comment_main_username_headprotrait"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/headprotrait"
                android:scaleType="fitCenter"
                android:src="@drawable/headprotrait"
                app:riv_oval="true">

            </com.makeramen.roundedimageview.RoundedImageView>

            <TextView
                android:id="@+id/item_comment_main_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/item_comment_main_username_headprotrait"
                android:layout_alignParentTop="false"
                android:layout_centerInParent="false"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/item_comment_main_username_headprotrait"
                android:text="@string/community1_visitors1_name"
                android:textColor="#353535"
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/item_comment_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_comment_main_username"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="false"
                android:layout_toEndOf="@id/item_comment_main_username_headprotrait"
                android:text="@string/community1_visitors_time"
                android:textColor="#AEAEAE"
                android:textSize="11sp">

            </TextView>


        </RelativeLayout>

        <Button
            android:id="@+id/item_comment_main_like"
            style="?borderlessButtonStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/horn">

        </Button>

        <Button
            android:id="@+id/item_comment_main_subcomment"
            style="?borderlessButtonStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/news">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_comment_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:maxLines="2"
            android:text="@string/community1_playertext"
            android:textColor="#353535"
            android:textSize="17dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="#F0F0F2"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/item_comment_main_loadmoresub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看全部回复"
                android:textColor="#25C689"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#F0F0F2"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>