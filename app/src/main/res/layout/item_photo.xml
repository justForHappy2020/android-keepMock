<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/community4_item_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="fitXY"
            android:background="#EFEFEF"
            android:src="@drawable/sucai"
            style="?borderlessButtonStyle">

        </ImageButton>

        <ImageButton
            android:id="@+id/community4_item_cancel"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/community4_item_image"
            android:layout_marginStart="-15dp"
            android:background="@drawable/button_leftradius_white"
            android:src="@drawable/cancel2"
            android:scaleType="fitCenter">

        </ImageButton>
    </RelativeLayout>



</LinearLayout>