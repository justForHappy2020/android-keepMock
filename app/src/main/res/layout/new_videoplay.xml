<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar_videoplay"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#DFDEDE"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/progressbar"
                android:secondaryProgress="70" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="135dp"
                android:layout_height="59dp"

                android:gravity="center"
                android:padding="10dp"
                android:text="01:53"
                android:textColor="#DFDEDE"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="540dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:text="1/17 单腿曲腿两头起"
                android:textColor="#000000"
                android:textSize="27sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageButton
                    style="?borderlessButtonStyle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="175dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/videostop">

                </ImageButton>

                <ImageButton
                    android:id="@+id/imageButton"
                    style="?borderlessButtonStyle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="90dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/videostart" />
            </LinearLayout>

        </LinearLayout>

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="507dp"
            android:layout_marginTop="100dp" />

        <Button
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_radius_gray"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            app:backgroundTint="#DFDEDE"
            android:text="查看\n讲解"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold">

        </Button>

    </RelativeLayout>
</LinearLayout>